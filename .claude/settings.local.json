{
  "permissions": {
    "allow": [
      "Bash(bun add:*)",
      "WebFetch(domain:aifaiss.com)",
      "Bash(cat:*)",
      "Bash(bun run build)",
      "Bash(tree:*)",
      "Bash(git:*)",
      "Bash(npx tsc:*)",
      "Bash(vercel:*)",
      "Skill(sentry:getIssues)",
      "Skill(sentry:seer)",
      "Skill(new-tool)",
      "Skill(deploy)",
      "Skill(update-pricing)",
      "Skill(debug-payments)",
      "mcp__plugin_playwright_playwright__browser_navigate",
      "Bash(npx tsx:*)",
      "Bash(find:*)",
      "Read(//*/.claude/skills/**)",
      "Bash(claude --diagnostics:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ” AIFAISS Session Started' && git branch --show-current 2>/dev/null || echo 'Not a git repo'",
            "statusMessage": "Initializing AIFAISS session..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsc --noEmit 2>&1 | head -20 || true",
            "statusMessage": "Running type check...",
            "timeout": 60
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "echo \"$(git branch --show-current 2>/dev/null || echo 'no-branch') | AIFAISS\"",
    "padding": 2
  }
}
